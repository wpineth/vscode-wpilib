{
    "name": "vscode-wpilib-core",
    "displayName": "vscode-wpilib-core",
    "description": "Base extension for WPILib Team Use",
    "version": "0.0.25",
    "publisher": "wpifirst",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "enableProposedApi": true,
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "debuggers": [
            {
                "type": "wpilib",
                "label": "WPILib Deploy and Debug",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "debug"
                        ],
                        "properties": {
                            "debug": {
                                "type": "boolean",
                                "description": "True for debug, false for deploy"
                            }
                        }
                    }
                }
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "wpilib_preferences.json",
                "url": "./resources/wpilibschema.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "WPILib configuration",
            "properties": {
                "wpilib.autoSaveOnDeploy": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically save all files on deploy",
                    "scope": "resource"
                },
                "wpilib.autoStartRioLog": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start RioLog on deploy",
                    "scope": "resource"
                },
                "wpilib.alwaysAskForTeamNumber": {
                    "type": "boolean",
                    "default": false,
                    "description": "Always ask for a team number, even if set",
                    "scope": "resource"
                },
                "wpilib.globalTeamNumberOverride": {
                    "type": "boolean",
                    "default": false,
                    "description": "Always resolve the vscode team number over the project team number.",
                    "scope": "resource"
                },
                "wpilib.globalTeamNumber": {
                    "type": "integer",
                    "default": -1,
                    "description": "Team number to use if not set in the project",
                    "scope": "resource"
                }
            }
        },
        "commands": [
            {
                "command": "wpilibcore.startRioLog",
                "title": "Start RioLog",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.setTeamNumber",
                "title": "Set Team Number",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.startTool",
                "title": "Start Tool",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.deployCode",
                "title": "Deploy Robot Code",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.debugCode",
                "title": "Debug Robot Code",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.setLanguage",
                "title": "Set Language",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.setAutoSave",
                "title": "Set Auto Save On Deploy",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.setStartRioLog",
                "title": "Set Auto Start RioLog on Deploy",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.createExample",
                "title": "Create new project from an example",
                "category": "WPILIB"
            },
            {
                "command": "wpilibcore.createTemplate",
                "title": "Create new project from a template",
                "category": "WPILIB"
            }
        ],
        "keybindings": [
            {
                "command": "wpilibcore.deployCode",
                "key": "shift+F5"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "wpilibcore.deployCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.startTool",
                    "group": "wpilib"
                }
            ],
            "explorer/context": [
                {
                    "command": "wpilibcore.deployCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.startTool",
                    "group": "wpilib"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "copyshared": "copyfiles -a-f ../shared/riolog/**.* src/riolog/shared && copyfiles -a-f ../shared/extensionAPIs/**.* src/shared",
        "compile": "npm run copyshared && tsc -p ./",
        "compileBundle": "npm run copyshared && tsc -p ./ && browserify ./out/riolog/shared/sharedscript.js > ./resources/bundle.js",
        "watch": "npm run copyshared && tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "browserify": "^16.1.1",
        "copyfiles": "^2.0.0",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2",
        "vscode": "^1.1.13"
    },
    "dependencies": {
        "jsonc-parser": "^1.0.1"
    }
}
