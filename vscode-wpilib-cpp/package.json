{
    "name": "vscode-wpilib-cpp",
    "displayName": "vscode-wpilib-cpp",
    "description": "Vscode extension for WPILib Cpp",
    "version": "0.0.6",
    "publisher": "wpifirst",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "wpilib_cpp_preferences.json",
                "url": "./resources/cppschema.json"
            }
        ],
        "commands": [
            {
                "title": "Refresh C++ Properties",
                "command": "wpilibcpp.refreshProperties",
                "category": "WPILIB"
            }
        ]
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/glob": "^5.0.35",
        "@types/ncp": "^2.0.1",
        "glob": "^7.1.2",
        "jsonc-parser": "^1.0.1",
        "ncp": "^2.0.0"
    }
}
