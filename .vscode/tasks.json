{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vscode-watch",
      "identifier": "vscode-watch",
      "group": "build",
      "isBackground": false,
      "presentation": {
          "reveal": "never",
      },
      "problemMatcher": [],
      "dependsOn": ["vscode-main-watch", "vscode-web-watch"]
    },
    {
      "type": "npm",
      "identifier": "vscode-main-watch",
      "script": "compile",
      "problemMatcher": "$tsc-watch",
      "path": "vscode-wpilib/",
      "isBackground": false,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "identifier": "vscode-web-watch",
      "script": "webpack",
      "path": "vscode-wpilib/",
      "isBackground": false,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "identifier": "standalone-watch",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "path": "wpilib-utility-standalone/",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
