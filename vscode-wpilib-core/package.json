{
    "name": "vscode-wpilib-core",
    "displayName": "vscode-wpilib-core",
    "description": "Base extension for WPILib Team Use",
    "version": "0.0.21",
    "publisher": "wpifirst",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "debuggers": [
            {
                "type": "wpilib",
                "label": "WPILib Debug"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "wpilib_preferences.json",
                "url": "./resources/wpilibschema.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "WPILib configuration",
            "properties": {
                "wpilib.autoSaveOnDeploy": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically save all files on deploy",
                    "scope": "resource"
                },
                "wpilib.autoStartRioLog": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start RioLog on deploy",
                    "scope": "resource"
                },
                "wpilib.alwaysAskForTeamNumber": {
                    "type": "boolean",
                    "default": false,
                    "description": "Always ask for a team number, even if set",
                    "scope": "resource"
                },
                "wpilib.globalTeamNumber": {
                    "type": "integer",
                    "default": -1,
                    "description": "Team number to use if not set in the project",
                    "scope": "resource"
                }
            }
        },
        "commands": [
            {
                "command": "wpilibcore.startRioLog",
                "title": "Start RioLog",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.setTeamNumber",
                "title": "Set Team Number",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.startTool",
                "title": "Start Tool",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.deployCode",
                "title": "Deploy Robot Code",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.debugCode",
                "title": "Debug Robot Code",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.setLanguage",
                "title": "Set Language",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.setAutoSave",
                "title": "Set Auto Save On Deploy",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.setStartRioLog",
                "title": "Set Auto Start RioLog on Deploy",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.createExample",
                "title": "Create new project from an example",
                "category": "wpilib"
            },
            {
                "command": "wpilibcore.createTemplate",
                "title": "Create new project from a template",
                "category": "wpilib"
            }
        ],
        "keybindings": [
            {
                "command": "wpilibcore.deployCode",
                "key": "shift+F5"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "wpilibcore.deployCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.debugCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.startTool",
                    "group": "wpilib"
                }
            ],
            "explorer/context": [
                {
                    "command": "wpilibcore.deployCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.debugCode",
                    "group": "wpilib"
                },
                {
                    "command": "wpilibcore.startTool",
                    "group": "wpilib"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.0",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "jsonc-parser": "^1.0.1"
    }
}
